import sys
import argparse

import roman

def main():
    ap = argparse.ArgumentParser()
    ap.parse_args()
    prog = ap.prog
    for s in sys.stdin:
        s = s.strip()
        try:
            i = roman.fromRoman(s.upper())
        except roman.InvalidRomanNumeralError:
            try:
                i = int(s, 0)
            except ValueError:
                print(f'{prog}: invalid numeral: {s!r}', file=sys.stderr)
                continue
        print(i)
if __name__ == '__main__':
    main()

